{% extends "@FestivalCore/Layout.html.twig" %}

{% block body %}
        
    <div class="well-festival">
        <h2 class="title"> Liste d'hebergements </h2>
        
        {% if listeHebergements != NULL %}
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        
                        <th>#</th>
                        <th>Date</th>
                        <th>Groupe</th>
                        <th>Etablissement<th>
                        <th>Chambre</th>
                    </tr>
                </thead>
            {% for unHebergement in listeHebergements %}
                <tbody>
                    <tr class="tr-white">
                        <th><a href="{{ path('festival_hebergement_hebergement', {'id': unHebergement.id}) }}">{{ unHebergement.id }}</a></th>
                        <td>{{ unHebergement.date|date('d/m/Y')}}</td>
                        <td>{{ unHebergement.groupe.nom }}</td>
                        <td>{{ unHebergement.chambre.idEtablissement.nom }}</td>
                        <td>{{ unHebergement.chambre.nomChambre }}</td>
                    </tr>
            {% endfor %}
                </tbody>  
            </table>
        {% else %}
            <li>Pas d'hebergements</li>
        {% endif %}
            
        <p style="text-align:center">
            <a href="{{ path('festival_hebergement_ajouthebergement') }}" class="btn btn-festival">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Ajouter un hebergement
            </a>
  	</p>
                
        
    </div>

{% endblock %}{# empty Twig template #}
