<h3>Formulaire de Lieu</h3>

<div class="well-form">
    
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        
        <div class="form-group">
            {{ form_label(form.nom,"Nom du lieu", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.nom) }}
            <div class="col-sm-10">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
 
    
        <div class="form-group">
            {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.adresse) }}
            <div class="col-sm-10">
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

    
        <div class="form-group">
            {{ form_label(form.capacite, "Capacité du lieu", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.capacite) }}
            <div class="col-sm-10">
                {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        
        <p style="text-align:center"> 
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-festival'}}) }}
        </p>
        
        {{ form_end(form) }}
            
</div>
{# empty Twig template #}
