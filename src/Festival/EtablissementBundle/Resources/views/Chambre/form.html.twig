<h3>Formulaire de Chambre</h3>

<div class="well-form">
    
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        
        <div class="form-group">
            {{ form_label(form.nomChambre,"Numéro/Nom de la Chambre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.nomChambre) }}
            <div class="col-sm-10">
                {{ form_widget(form.nomChambre, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
 
    
        <div class="form-group">
            {{ form_label(form.nbPlaces, "Nombre de lits", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.nbPlaces) }}
            <div class="col-sm-10">
                {{ form_widget(form.nbPlaces, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

    
        <div class="form-group">
            {{ form_label(form.idEtablissement, "Sélection de L'établissement", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.idEtablissement) }}
            <div class="col-sm-10">
                {{ form_widget(form.idEtablissement, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        
        <p style="text-align:center"> 
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-festival'}}) }}
        </p>
        
        {{ form_end(form) }}
            
</div>
{# empty Twig template #}
